<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="autoCheck_switch"
        android:title="@string/pref_title_gmail_auto_check"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="stopAutoCheckClose_switch"
        android:title="@string/pref_title_gmail_stop_auto_check_close" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="monitorToday_switch"
        android:title="@string/pref_title_gmail_monitor_today" />

    <ListPreference
        android:defaultValue="15"
        android:entries="@array/pref_check_frequency_titles"
        android:entryValues="@array/pref_check_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_check_frequency"
        android:summary="%s" />

</PreferenceScreen>
